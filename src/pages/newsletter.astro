---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
// import Authors from '@/components/Authors.astro'
import { Button } from '@/components/ui/button'
// import ProjectCard from '@/components/ProjectCard.astro'
// import { getCollection } from 'astro:content'


// const projects = await getCollection('projects')

---

<Layout title="Successfully Joined Newsletter" description={SITE.DESCRIPTION} newsletter={false}>
  <Container class="flex flex-col gap-y-6">
    <Breadcrumbs items={[{ label: 'Newsletter', icon: 'lucide:info' }]} />

    <section>
      <div class="min-w-full">
        <div class="prose prose-neutral mb-8 dark:prose-invert max-w-full">
          <h1>You have successfully joined Daygency newsletter</h1>
          <p>Any time we publish a new piece of content, we will send a copy of it to your inbox as well. Until you hear from us, you can browse through our website.</p>
          
          <Button variant={'default'} size="lg" className="not-prose">
            <Link href="/services" title="Services">Services</Link>
          </Button>
          <Button variant={'outline'} size="lg" className="not-prose">
            <Link href="/blog" title="Blog">Blog</Link>
          </Button>
      </div>
    </section>
  </Container>
</Layout>
