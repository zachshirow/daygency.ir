---
import { type CollectionEntry , getEntry, render } from 'astro:content'

type Props = {
    id: string;
}

type Snippet = CollectionEntry<"snippets"> | undefined

const snippet: Snippet = await getEntry("snippets", Astro.props.id)

let SnippetContent

if(snippet != undefined){
    const { Content } = await render(snippet)
    SnippetContent = Content
}

---

{
    SnippetContent && <SnippetContent />
}